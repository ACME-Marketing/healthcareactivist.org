---
// src/components/Card.astro
export interface Props {
  title: string;
  href: string;
  imageSrc?: string;
  imageAlt?: string;
  body?: string;
}

const { title, href, imageSrc, imageAlt, body } = Astro.props;
---
<a href={href} class="card block group">
  {imageSrc && (
    <div class="overflow-hidden">
      <img src={imageSrc} alt={imageAlt || ''} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-200" />
    </div>
  )}
  <div class="p-6">
    <h3 class="font-heading text-xl md:text-2xl font-bold mb-3 text-primary group-hover:text-accent transition-colors duration-200">{title}</h3>
    {body && <p class="text-text leading-relaxed line-clamp-3">{body}</p>}
    <div class="mt-4 text-accent font-semibold text-sm group-hover:underline">
      Read More â†’
    </div>
  </div>
</a>