---
import BaseLayout from '../layouts/BaseLayout.astro';
import { graphQLClient, gql } from '../lib/graphql';

const GET_HEALTHCAREACTIVIST_POSTS = gql`
  query GetHealthcareactivistPosts {
    posts(where: { tagIn: ["healthcareactivist", "all"] }) {
      nodes {
        title
        uri
        tags {
          nodes {
            name
          }
        }
      }
    }
  }
`;

let posts = [];
try {
  const data = await graphQLClient.request(GET_HEALTHCAREACTIVIST_POSTS);
  posts = data.posts.nodes;
} catch (error) {
  console.error("Error fetching posts for healthcareactivist.org:", error);
}
---

<BaseLayout title="Healthcare Activist">
	<header>
		<h1>Welcome to Healthcare Activist</h1>
	</header>

	<main class="container">
		{posts.length > 0 ? (
			<ul>
				{posts.map((post) => (
					<li>
						<a href={post.uri}>{post.title}</a>
						{post.tags && post.tags.nodes.length > 0 && (
							<span> ({post.tags.nodes.map(tag => tag.name).join(', ')})</span>
						)}
					</li>
				))}
			</ul>
		) : (
			<p>No posts found. Please add some posts in your WordPress CMS with the tag "healthcareactivist" or "all".</p>
		)}
	</main>

	<footer>
		<p>&copy; {new Date().getFullYear()} Healthcare Activist. All rights reserved.</p>
	</footer>
</BaseLayout>