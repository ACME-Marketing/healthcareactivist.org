---
import { graphQLClient, gql } from '../lib/graphql';

const GET_HEALTHCAREACTIVIST_POSTS = gql`
  query GetHealthcareactivistPosts {
    posts(where: { categoryName: "Healthcare Activist News" }) {
      nodes {
        title
        uri
        categories {
          nodes {
            name
          }
        }
      }
    }
  }
`;

let posts = [];
try {
  const data = await graphQLClient.request(GET_HEALTHCAREACTIVIST_POSTS);
  posts = data.posts.nodes;
} catch (error) {
  console.error("Error fetching posts for healthcareactivist.org:", error);
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Healthcare Activist - Blog</title>
	</head>
	<body>
		<h1>Welcome to Healthcare Activist Blog</h1>

		{posts.length > 0 ? (
			<ul>
				{posts.map((post) => (
					<li>
						<a href={post.uri}>{post.title}</a>
						{post.categories && post.categories.nodes.length > 0 && (
							<span> ({post.categories.nodes.map(cat => cat.name).join(', ')})</span>
						)}
					</li>
				))}
			</ul>
		) : (
			<p>No posts found. Please add some posts in your WordPress CMS with the category "Healthcare Activist News".</p>
		)}
	</body>
</html>
